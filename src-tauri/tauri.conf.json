{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Adang",
    "version": "0.0.1"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "systemTray": {
      "iconPath": "icons/icon.ico"
    },
    "allowlist": {
      "all": false,
      "os": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": true,
        "create": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.adang",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "wix": {
          "language": "zh-CN"
        },
        "nsis": {
          "headerImage": "icons/headerImage.bmp",
          "sidebarImage": "icons/sidebarImage.bmp",
          "languages": ["SimpChinese", "English"]
        }
      }
    },
    "security": {
      "dangerousRemoteDomainIpcAccess": [{
        "domain": "adangs.github.io",
        "windows": ["main"],
        "enableTauriAPI": true
      }]
    },
    "windows": [
      {
        "label": "main",
        "center": true,
        "fullscreen": false,
        "resizable": true,
        "fileDropEnabled": false,
        "decorations": false,
        "title": "Adang",
        "minWidth": 1400,
        "minHeight": 600,
        "width": 1400,
        "height": 800,
        "url": "index.html",
        "visible": true
      },
      {
        "fullscreen": false,
        "center": true,
        "resizable": false,
        "transparent": true,
        "alwaysOnTop": true,
        "decorations": false,
        "fileDropEnabled": false,
        "title": "loading",
        "maxWidth": 600,
        "maxHeight": 300,
        "minWidth": 600,
        "minHeight": 300,
        "width": 600,
        "height": 300,
        "label": "splashscreen",
        "url": "splashscreen.html"
      }
    ]
  }
}
